<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.MemberActivity">

    <LinearLayout
        android:id="@+id/mHeader"
        android:background="@drawable/ic_bg_header_design3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <ImageView
        app:srcCompat="@drawable/ic_user"
        android:id="@+id/mHeaderIV"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:text="Member name"
        android:id="@+id/memberNameTv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/mHeaderIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/memberEmail2"
        android:text="email@gmail.com"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/mHeaderIV"
        app:layout_constraintTop_toBottomOf="@id/memberNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/mMessName"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/edittext_shape3"
        android:textColor="@color/colorWhite"
        android:text="Mess Name"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/mHeaderIV"
        app:layout_constraintTop_toBottomOf="@id/memberEmail2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/messSum"
        android:shadowRadius="3"
        android:shadowColor="@color/colorGray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:text="Mess Summery"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/meDeposit"
        android:padding="7dp"
        android:paddingStart="12dp"
        android:elevation="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape7"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="----"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messSum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="12dp"
        android:id="@+id/meCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape7"
        android:elevation="5dp"
        android:padding="7dp"
        android:text="---"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meDeposit" />

    <TextView
        android:paddingStart="12dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/meBalance"
        android:padding="7dp"
        android:elevation="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape7"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="---"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="12dp"
        android:id="@+id/mTotalMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape7"
        android:elevation="5dp"
        android:padding="7dp"
        android:text="---"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/meBalance" />

    <TextView
        android:paddingStart="12dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/mMealRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edittext_shape7"
        android:elevation="7dp"
        android:padding="5dp"
        android:text="---"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mTotalMeal" />

    <TextView
        android:id="@+id/myInfo"
        android:shadowRadius="3"
        android:shadowColor="@color/colorGray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:text="Personal info"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/mMealRate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




 <LinearLayout
     android:gravity="center"
     android:layout_marginBottom="40dp"
     android:weightSum="4"
     android:layout_marginTop="5dp"
     app:layout_constraintTop_toBottomOf="@id/myInfo"
     android:orientation="horizontal"
     app:layout_constraintBottom_toBottomOf="@id/pLogoutBtn"
     android:layout_width="match_parent"
     android:layout_height="0dp">

     <LinearLayout
         android:padding="10dp"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="match_parent">

         <LinearLayout
             android:gravity="center"
             android:elevation="5dp"
             android:background="@drawable/circle"
             android:layout_width="match_parent"
             android:layout_height="70dp" >

             <TextView
                 android:textColor="@color/colorBlack"
                 android:id="@+id/pDeposit"
                 android:text="-"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>


         </LinearLayout>

         <TextView
             android:layout_marginTop="3dp"
             android:textAlignment="center"
             android:text="Deposit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>


     </LinearLayout>
     <LinearLayout
         android:padding="10dp"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="match_parent">

         <LinearLayout
             android:gravity="center"
             android:elevation="5dp"
             android:background="@drawable/circle"
             android:layout_width="match_parent"
             android:layout_height="70dp" >

             <TextView
                 android:textColor="@color/colorBlack"
                 android:id="@+id/pMeal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="-"
               />


         </LinearLayout>

         <TextView
             android:layout_marginTop="3dp"
             android:textAlignment="center"
             android:text="My Meal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>


     </LinearLayout>
     <LinearLayout
         android:padding="10dp"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="match_parent">

         <LinearLayout
             android:gravity="center"
             android:elevation="5dp"
             android:background="@drawable/circle"
             android:layout_width="match_parent"
             android:layout_height="70dp" >

             <TextView
                 android:textColor="@color/colorBlack"
                 android:id="@+id/pCost"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="-"
                  />


         </LinearLayout>

         <TextView
             android:layout_marginTop="3dp"
             android:textAlignment="center"
             android:text="My Cost"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>


     </LinearLayout>
     <LinearLayout
         android:padding="10dp"
         android:orientation="vertical"
         android:layout_weight="1"
         android:layout_width="0dp"
         android:layout_height="match_parent">

         <LinearLayout
             android:gravity="center"
             android:elevation="5dp"
             android:background="@drawable/circle"
             android:layout_width="match_parent"
             android:layout_height="70dp" >

             <TextView
                 android:textColor="@color/colorBlack"
                 android:id="@+id/pBalance"
                 android:text="-"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>


         </LinearLayout>

         <TextView
             android:text="Balance"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="3dp"
             android:textAlignment="center" />


     </LinearLayout>







 </LinearLayout>


    <Button
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/pLogoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape_gradient_button3"
        android:text="L o g o u t"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>