<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.MemberActivity">

    <View
        android:id="@+id/bg_top_header"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/ic_bg_header_design2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/header_imageView"
        app:srcCompat="@drawable/ic_user"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        app:layout_constraintStart_toStartOf="@id/bg_top_header"
        app:layout_constraintTop_toTopOf="@id/bg_top_header"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/managerUserNamem"
        android:textSize="19sp"
        android:textColor="@color/colorWhite"
        android:text="Manager User Name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/bg_top_header"
        app:layout_constraintStart_toEndOf="@id/header_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="15sp"
        android:id="@+id/managerEmailm"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="10dp"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@id/managerUserNamem"
        app:layout_constraintStart_toEndOf="@id/header_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/edittext_shape3"
        android:id="@+id/managerMessName"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Mess Name"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/managerEmailm"
        app:layout_constraintStart_toEndOf="@id/header_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="3"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_marginTop="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/AddMealCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_add_meal"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:text="Add meal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/messInfoCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_mess_info"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:text="Mess Info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/addMoneyCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/ic_taka2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Add Money"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/AddCostCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_cost"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:text="Add cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/allMemberCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_all_member3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:text="All Member"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logoutCardM"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="4dp"
                android:outlineAmbientShadowColor="@color/colorRed"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="130dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        app:srcCompat="@drawable/ic_logout"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <TextView
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        android:layout_marginTop="10dp"
                        android:text="Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>







    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>