<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:layout_height="match_parent"
    tools:context=".view.activity.addMemberActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_person" />

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_arrow_back"
        android:layout_width="28dp"
        android:layout_height="28dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add member to your Mess"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <EditText
        android:id="@+id/memberUserName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_shape"
        android:hint="Member username"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@id/icon1"
        app:layout_constraintTop_toBottomOf="@id/text" />

    <ImageView
        android:padding="10dp"
        app:srcCompat="@drawable/ic_man"
        android:background="@drawable/edittext_shape2"
        android:id="@+id/icon1"
        app:layout_constraintTop_toTopOf="@id/memberUserName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/memberEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_shape"
        android:hint="Member email"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/icon1"
        app:layout_constraintTop_toBottomOf="@id/memberUserName" />

    <ImageView
        android:padding="10dp"
        app:srcCompat="@drawable/ic_email"
        android:background="@drawable/edittext_shape2"
        android:id="@+id/icon5"
        app:layout_constraintTop_toTopOf="@id/memberEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/memberAddress"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_shape"
        android:hint="Address"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@id/icon2"
        app:layout_constraintTop_toBottomOf="@id/memberEmail" />

    <ImageView
        android:padding="10dp"
        app:srcCompat="@drawable/ic_location"
        android:background="@drawable/edittext_shape2"
        android:id="@+id/icon2"
        app:layout_constraintTop_toTopOf="@id/memberAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>


    <EditText
        android:id="@+id/memberNid"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_shape"
        android:hint="NID"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@id/icon2"
        app:layout_constraintTop_toBottomOf="@id/memberAddress" />

    <ImageView
        android:padding="10dp"
        app:srcCompat="@drawable/ic_id"
        android:background="@drawable/edittext_shape2"
        android:id="@+id/icon6"
        app:layout_constraintTop_toTopOf="@id/memberNid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>





    <Button
        android:id="@+id/addMemberButton"
        android:textColor="@color/colorWhite"
        android:text="Add member"
        android:background="@drawable/shape_gradient_button2"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/memberNid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>